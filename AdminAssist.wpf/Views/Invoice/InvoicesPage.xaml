<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AdminAssist.wpf.Views.Invoice"
      xmlns:viewModels="clr-namespace:AdminAssist.wpf.Views.ViewModels"
      xmlns:system="clr-namespace:System;assembly=mscorlib"
      x:Class="AdminAssist.wpf.Views.Invoice.InvoicesPage"
      mc:Ignorable="d"
      d:Background="LightGray"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{StaticResource ResourceKey=InvoicePageTitle}"
      d:DataContext="{d:DesignInstance Type=viewModels:InvoicesViewModel}">

    <Page.Resources>
        <system:String x:Key="NameHeader">Nombre</system:String>
    </Page.Resources>

    <DockPanel>

        <DataGrid AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserResizeRows="False"
                  Margin="4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{StaticResource ResourceKey=NameHeader}"
                                    Width="Auto" 
                                    Binding="{Binding }"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>