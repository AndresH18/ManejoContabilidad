<Page x:Class="ManejoContable.View.Pages.FacturaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ManejoContable.View.Pages"
      xmlns:uc="clr-namespace:ManejoContable.UserControls"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FacturaPage"
      Background="WhiteSmoke">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="3*" MaxWidth="400" />
        </Grid.ColumnDefinitions>


        <!-- Info Cliente -->
        <uc:ClientInformationControl Grid.Column="0" Grid.Row="0" />

        <!-- Info ProductFactura -->
        <uc:FacturaProductosDetailsControl Grid.Column="0" Grid.Row="1" />
        <!-- Datos Totales -->
        <uc:DatosTotales Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" />


    </Grid>
</Page>